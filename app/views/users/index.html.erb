<h1>Users</h1>

<%= link_to 'Add new user', new_user_path %>

<table>
  <tr>
    <th>User ID</th>
    <th>User Name</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= link_to 'Edit user', edit_user_path(user) %></td>
      <td><%= button_to 'Delete user', user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>