<h1 class='users-header'>Users</h1>

<%= link_to 'Add new user', new_user_path, class: 'btn btn-success' %>

<table class="table">
  <thead>
  <tr>
    <th>User ID</th>
    <th>User Name</th>
    <th>Edit user</th>
    <th>Delete user</th>
  </tr>
  </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>